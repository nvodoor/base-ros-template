---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import StickerNavLogo from '../../assets/full-sticker-transparent.png';
import Picture from "astro/components/Picture.astro";
import headerLinks from "content/links/headerLinks";

const DOCS = "Docs";

---

<Container class="bg-cyan-400/70">
  <header class="flex flex-col lg:flex-row justify-between items-center">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <Picture       
          src={StickerNavLogo}
          alt="Nav Balloon Logo"
          width="200"
          loading="eager"
          format="avif" 
        />
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            headerLinks.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === headerLinks.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900">
                      <span> {item.title}</span>
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link href="#" size="md" block>{DOCS}</Link>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <Link href="https://navigation.ros.org/getting_started/index.html" size="md">{DOCS}</Link>
      </div>
    </div>
  </header>
</Container>
